<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/selectable_item_background_borderless"
    android:orientation="horizontal"
    tools:ignore="UnusedAttribute">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_weather_daily_valueicon_icon"
        android:src="@drawable/ic_mode_cool"
        android:layout_gravity="center_vertical"
        style="@style/material_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/little_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/little_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_weather_daily_valueicon_text"
            android:importantForAccessibility="no"
            style="@style/subtitle_text"
            tools:text="Cooling degree day" />

        <TextView
            android:id="@+id/item_weather_daily_valueicon_value"
            android:textStyle="bold"
            android:importantForAccessibility="no"
            style="@style/title_text"
            tools:text="2 Â°C" />

    </LinearLayout>

</LinearLayout>